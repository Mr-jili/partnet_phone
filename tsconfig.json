{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2016",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "types": [
            "node",
            "vite/client"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}